{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "CEF Detector Tauri",
  "version": "1.0.0",
  "identifier": "com.cef-detector-tauri.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "CEF Detector Tauri",
        "width": 1000,
        "height": 749,
        "minWidth": 1000,
        "minHeight": 749
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["es.exe"]
  }
}
